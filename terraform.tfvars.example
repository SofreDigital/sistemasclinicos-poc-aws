# AWS Configuration
aws_region = "us-east-1"
environment = "poc"

# Availability Zones (modify according to your region)
availability_zones = ["us-east-1a", "us-east-1b"]

# Network Configuration
vpc_cidr = "10.0.0.0/16"
vpn_client_cidr = "192.168.0.0/16"

# EC2 Configuration
instance_type = "t3.micro"
key_pair_name = "sistemasclinicos-keypair"  # CHANGE THIS to your existing key pair

# Aurora Configuration
aurora_instance_class = "db.t3.medium"
aurora_backup_retention = 7

# S3 Configuration
s3_bucket_name = "sistemasclinicos-static-pages"

# Common Tags
common_tags = {
  "PoC SistemasClinicos" = "true"
  "Project"              = "SistemasClinicos"
  "ManagedBy"           = "Terraform"
  "Owner"               = "SofreDigital"
  "Environment"         = "poc"
}